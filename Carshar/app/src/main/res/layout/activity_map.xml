<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Map"
    android:background="#FFE4C4">
    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="12"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#FFE4C4">

        <TextView
            android:id="@+id/carNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Машина"
            android:textSize="20dp"
           />

        <TextView
            android:id="@+id/carName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:hint="Mazda 3"
            android:textSize="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#FFE4C4">
        <TextView
            android:id="@+id/CompanyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Компания"
            android:layout_weight="1"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/Company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="YandexDrive"
            android:gravity="right"
            android:layout_weight="1"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#FFE4C4">
        <TextView
            android:id="@+id/fuelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Бензин"
            android:layout_weight="1"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/fuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="84%"
            android:gravity="right"
            android:layout_weight="1"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#FFE4C4">
        <TextView
            android:id="@+id/pathTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время в пути"
            android:layout_weight="1"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/pathTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="37 минут"
            android:gravity="right"
            android:layout_weight="1"
            android:textSize="20dp"/>
    </LinearLayout>





</LinearLayout>